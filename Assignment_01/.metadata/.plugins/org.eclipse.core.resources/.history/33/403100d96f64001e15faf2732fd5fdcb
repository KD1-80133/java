
public class Assignment1_04{
	public static void patternA(int rows) {
        for (int i = 1; i <= rows; i++) {
            for (int j = 1; j <= rows-i; j++) {
                System.out.print(" ");
            }
            for (int j = 1; j <= i; j++) {
                System.out.print(" * ");
            }
            System.out.println();
        }
    }


		public static void main(String[] args)
		{
			int rows=5;
			System.out.println("Pattern A:");
			patternA(rows);
			System.out.println("pattern c:");
			for(int i=1;i<=rows; i++)
			{
				for(int j=1;j<=rows-i;j++)
				{
					System.out.print(" ");
			}
				
				 for (int j = 1; j <= i; j++) {
		                System.out.print("*");
		            }
				 System.out.println();
			}
	}
}
