
public class Assignment1_04{
	public static void patternA(int rows) {
        for (int i = 1; i <= rows; i++) {
            for (int j = 1; j <= rows-i; j++) {
                System.out.print(" ");
            }
            for (int j = 1; j <= i; j++) {
                System.out.print(" * ");
            }
            System.out.println();
        }
    }


	public static void patternC(int rows) {
        for (int i = 1; i <= rows; i++) {
            for (int j = 1; j <= rows - i; j++) {
                System.out.print(" ");
            }
            for (int j = 1; j <= 2 * i - 1; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    }
public static void main(String[] args) {
    int rows = 6;

    System.out.println("Pattern A (Equivalent):");
    patternA(rows);

    System.out.println("Pattern C (Equivalent):");
    patternC(rows);
}
}
